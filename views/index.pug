doctype html
html
  head
    style.
      html, body, #container {    
        width: 100%;
        height: 100%;
        margin: 0;
        padding: 0;
      }
  body
    script(src="https://cdn.anychart.com/releases/8.8.0/js/anychart-base.min.js")/
    script(src="https://cdn.anychart.com/releases/8.8.0/js/anychart-exports.min.js")/
    script(src="https://cdn.anychart.com/releases/8.8.0/js/anychart-ui.min.js")/
    div(id="ac_style_modules--samples-anychart.area" style="display:none;")
      script.
        (function(){
          function ac_add_to_head(el){
            var head = document.getElementsByTagName('head')[0];
            head.insertBefore(el,head.firstChild);
          }
          function ac_add_link(url){
            var el = document.createElement('link');
            el.rel='stylesheet';el.type='text/css';el.media='all';el.href=url;
            ac_add_to_head(el);
          }
          function ac_add_style(css){
            var ac_style = document.createElement('style');
            if (ac_style.styleSheet) ac_style.styleSheet.cssText = css;
            else ac_style.appendChild(document.createTextNode(css));
            ac_add_to_head(ac_style);
          }
          ac_add_link('https://cdn.anychart.com/releases/8.8.0/css/anychart-ui.min.css');
          ac_add_style(document.getElementById("ac_style_modules--samples-anychart.area").innerHTML);
          ac_add_style(".anychart-embed-modules--samples-anychart.area{width:600px;height:450px;}");
          })()

      div(id="container")/
      script
        | var confirmedCases = !{JSON.stringify(confirmedCases)}
        | var tests = !{JSON.stringify(tests)}
      script.
        anychart.onDocumentReady(function () {
            // Creates Area chart.
            var chart = anychart.area(
                tests,
                confirmedCases
            );

            chart.title('Create an Area chart');
            chart.container('container');
            chart.draw();
        });
